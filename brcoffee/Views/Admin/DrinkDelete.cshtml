@model brcoffee.Models.drink

@{
    ViewBag.Title = "BR Studio & Coffee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-3">
    <h2>Are you sure you want to delete this?</h2>
    <div>
        <hr>
        <dl class="dl-horizontal">
            <dt>Drink:</dt>
            <dd>@Html.DisplayFor(model => model.name)</dd>
            <dt>ID Category:</dt>
            <dd>@Html.DisplayFor(model => model.idcategory)</dd>
            <dt>Image:</dt>
            <dd><img src="~/Resources/Drink/@ViewBag.picture" width="400"></dd>
            <dt>Description:</dt>
            <dd>@Html.DisplayFor(model => model.describe)</dd>
            <dt>Price: </dt>
            <dd>@Html.DisplayFor(model => model.price) đ</dd>
            <dt>Update:</dt>
            <dd> @Html.DisplayFor(model => model.date)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete the Drink" class="btn btn-danger my-3">
            </div>
            <hr>
            @Html.ActionLink("Back to List", "Drink")
        }
    </div>
</div>
