            @Html.LabelFor(model => model.content3, htmlAttributes: new { @class = "control-label" })
            <div>
                <textarea name="describe"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 text-center">
                <input type="submit" value="Create News" class="btn btn-success my-3" />
            </div>
        </div>
    </div>
    }
    <hr>
    <div>
        @Html.ActionLink("Back to List", "News")
    </div>
</div>
    
