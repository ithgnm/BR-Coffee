@model IEnumerable<brcoffee.Models.news>

<div class="container my-2">
    <h2 class="h3-index text-left my-3">News</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-md-12 my-4">
                <div class="row news-column align-middle">
                    <div class="col-4 text-center align-middle">
                        <img class="img-responsive" src="~/Resources/News/@item.picture1" width="150">
                    </div>
                    <div class="col">
                        <h4>@item.topic</h4>
                        <p>@item.title</p>
                        <a href="@Url.Action("News", "News", new { id = item.id })"><h6>Read more...</h6></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
